<div class="users">
  <% @users.each do |user| %>
    <% if user.image? %>
      <%= link_to image_tag(user.image.url), user, class: "user-show", id: "user-#{user.id}" %>
    <% else %>
      <%= link_to image_tag(asset_path('no_image.png')), user, class: "user-show", id: "user-#{user.id}" %>
    <% end %>
    <div class="figcaption">
      <%= user.username %></div>
  <% end %>
</div>
